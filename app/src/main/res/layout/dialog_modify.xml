<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:id="@+id/dialog_confirmcancel_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/W1"
        android:minHeight="80dp"
        android:padding="20dp">

        <TextView
            android:id="@+id/dialog_modify_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="输入标题"
            android:textColor="@color/B1"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/dialog_modify_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_modify_title"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:hint="在此输入文本"
            android:textColor="@color/B1"
            android:textColorHint="@color/black_a"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/dialog_modify_content"
            android:layout_marginTop="2dp" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/dialog_confirmcancel_content"
        android:background="@color/W1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_modify_confirm"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/W1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/B1"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/dialog_confirmcancel_cancelcontainer"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <View
                android:layout_width="1px"
                android:layout_height="40dp"
                android:background="@color/gray_b" />

            <TextView
                android:id="@+id/dialog_modify_cancel"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/B1"
                android:textSize="16sp"
                android:visibility="visible" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/dialog_confirmcancel_content"
        android:background="@color/gray_b" />


</RelativeLayout>