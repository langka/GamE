<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/touch_bg">

    <ImageView
        android:id="@+id/item_history_win"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:src="@drawable/ic_account_box_30px" />


    <LinearLayout
        android:id="@+id/c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/item_history_win"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_history_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="红方: xusong2"
            android:textColor="@color/R1" />

        <TextView
            android:id="@+id/item_history_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="黑方: xusong3"
            android:textColor="@color/black" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_history_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="30dp"
        android:text="总计: [22步]"
        android:textColor="@color/G3"
        android:textSize="16sp" />
    <View
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"
        android:layout_below="@+id/c"
        android:background="@color/green_a"
        android:layout_width="match_parent"
        android:layout_height="4dp"/>

</RelativeLayout>