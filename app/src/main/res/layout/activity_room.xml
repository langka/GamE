<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_tr"
    android:orientation="vertical"
    android:paddingTop="16dp">

    <include
        android:id="@+id/red_container"
        layout="@layout/info_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:text="V.S"
        android:textColor="@color/colorLabelYellow"
        android:textSize="40sp" />

    <include
        android:id="@+id/black_container"
        layout="@layout/info_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="15dp">

        <TextView
            android:id="@+id/swap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_login_me"
            android:gravity="center"
            android:padding="10dp"
            android:text="交换"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/leave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@drawable/btn_login_me"
            android:gravity="center"
            android:padding="10dp"
            android:text="离开"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/kick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@drawable/btn_login_me"
            android:gravity="center"
            android:padding="10dp"
            android:text="踢出"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@drawable/btn_login_me"
            android:gravity="center"
            android:padding="10dp"
            android:text="开始"
            android:textSize="20sp"
            android:visibility="visible" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">

        <EditText
            android:textColorHint="@color/gray_b"
            android:hint="输入消息内容"
            android:id="@+id/input_message"
            android:padding="5dp"
            android:gravity="bottom"
            style="@style/edittext_style"
            android:background="@color/W1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/invite"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="20sp" />
        <View
            android:layout_marginTop="5dp"
            android:layout_below="@id/send"
            android:background="@color/R1"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/invite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/send"
            android:background="@drawable/white_radius12_comtainer"
            android:gravity="center"
            android:padding="5dp"
            android:text="+"
            android:textColor="@color/R1"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/white_radius12_comtainer"
            android:gravity="center"
            android:padding="5dp"
            android:text="Send"
            android:textColor="@color/R1"
            android:textSize="20sp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/room_talk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>