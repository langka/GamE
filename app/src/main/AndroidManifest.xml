<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bupt.sworld">


    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="serverIp"
            android:value="127.0.0.1" />

        <meta-data
            android:name="serverPort"
            android:value="3333" />

        <meta-data
            android:name="systemName"
            android:value="bad" />

        <activity
            android:name=".activity.HelloActivity"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.AccountActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.HomePageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.RoomActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.GameActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.RegisterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.WatchActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.HistoryActivity"
            android:screenOrientation="portrait" />


    </application>

</manifest>